ssh:
    port: 22
    user_key: /root/id_rsa
    enable_sshd: False

firejail:
    blacklist:
        - ~/.calendars
        - ~/.config/vdirsyncer
        - ~/.contacts
        - ~/.keys
        - ~/.mbsyncrc
        - ~/.offlineimap
        - ~/.offlineimaprc
        - ~/.password-store
        - ~/.vdirsyncer
        - ~/library

hardened:
    enable_namespaces: true

kernel_parameters: "quiet consoleblank=60"




tools:
    - file-roller
    - zathura
    - zathura-pdf-mupdf
    - lxtask
    - gvim
    - vim-spell-it
    - python-neovim
    - firefox-i18n-it
    - gitg
    - leafpad

mail:
    - neomutt
    - offlineimap
    - msmtp
    - notmuch-runtime
    - gpgme
    - urlscan

mail_aur:
    - lbdb

mail_account:
    name: account
    imap_host: imap.account
    imap_ssl: yes
    imap_port: 993
    smtp_host: smtp.account
    smtp_auth: "on"
    smtp_username: lg
    smtp_tls: "on"
    smtp_port: 587



pim:
   - vdirsyncer
   - pass

pim_aur:
   - todoman-git
   - khal-git
   - davmail

pim_account:
   name: account
   url: caldav_url

audio_core:
  - alsa-utils
  - pulseaudio
  - pulseaudio-alsa
  - pavucontrol

audio_players:
  - mpd
  - mpc
  - ncmpcpp

audio_aur:
  - soundcloud-dl-git

ops_cli:
  - ansible
  - ansible-lint
  - wireshark-cli

ops_aur:
  - puppet-lint


dev:
  python:
    - subversion
    - ipython3
    - ipython2
    - ipython
    - python-pip
    - python2-pip
    - python3-pip
    - python3-virtualenv
    - python2-virtualenv
    - python-virtualenv
    - python-virtualenvwrapper
    - pelican
    - flake8
